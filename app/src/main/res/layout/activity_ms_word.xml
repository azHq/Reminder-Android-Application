<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MsWord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">


            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Title:"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/titleText"
                android:background="@drawable/titlebackground"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="4dp"
                android:layout_width="185dp"
                android:paddingLeft="4dp"
                android:layout_height="30dp" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginRight="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Time: 09.30pm"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Day: sunday"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Date: 09.02.18"
                    android:textStyle="bold" />


            </LinearLayout>



        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="331dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/sidebar">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/pagebackground"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="302dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:fontFamily="serif"
                        android:paddingTop="3dp"

                        android:hint="Write something"
                        android:textColor="#6817ea"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="296dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="499dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginRight="23dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0">


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>

                        <View
                            android:layout_width="280dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="@dimen/viewmarginTop"
                            android:background="@color/colorPrimary">

                        </View>


                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/sidebar"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/font"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:src="@drawable/textsize" />

                <ImageView
                    android:id="@+id/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_chat_head2" />

                <ImageView
                    android:id="@+id/newpage"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:src="@drawable/newpage" />



                <ImageView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:src="@drawable/newpage3" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>





</RelativeLayout>