<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="vertical" android:id="@+id/ad_unit" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp">
        <RelativeLayout android:id="@+id/title_and_media" android:layout_width="match_parent" android:layout_height="300dp">
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:paddingLeft="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="HIiiii"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/native_icon_and_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="27dp">
                <ImageView android:layout_gravity="center" android:id="@+id/native_ad_icon" android:layout_width="50dp" android:layout_height="50dp"/>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_gravity="center" android:id="@+id/native_ad_title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <TextView android:textSize="14sp" android:textColor="@android:color/white" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/native_ad_body" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="2"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView android:layout_gravity="center" android:id="@+id/native_cover_image" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/native_icon_and_text"/>
        </RelativeLayout>
        <Button android:textSize="16sp" android:layout_gravity="center" android:id="@+id/native_ad_call_to_action" android:background="#6edc4c" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_and_media"/>
    </RelativeLayout>
</FrameLayout>
