<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#cafce2"
    android:layout_marginTop="1dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginStart="2dp"
            android:src="@drawable/alarmclock2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Time"
                android:textAlignment="textStart"
                android:textColor="#a12dc5"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="serif"
                android:text="Date"
                android:textAlignment="textStart"
                android:textColor="#d96330"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="serif"
                android:text="repeat"
                android:textAlignment="textStart"
                android:textColor="#b13767"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="serif"
                android:text="Text"
                android:textColor="#161bc3"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="3dp"
            android:orientation="vertical">

            <Button
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:background="@drawable/edit" />

            <Switch
                android:layout_width="45dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp"
                android:thumbTint="#ea108c"
                android:trackTint="#ea108c"
                android:layout_height="12dp"
                android:backgroundTint="@color/colorAccent"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
