<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="392dp"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar2">

        </include>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/button5"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/study2"
            android:fontFamily="serif-monospace"
            android:onClick="toStudy"
            android:textColor="#0d1cbf"
            android:textStyle="bold" />

        <Button

            android:id="@+id/button8"
            android:layout_width="96dp"
            android:layout_height="93dp"
            android:layout_gravity="fill_vertical"
            android:layout_marginStart="24dp"
            android:background="@drawable/alarmclock4"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="toRemined"
            android:text="Alarm"
            android:textColor="#fdfcfc" />



        <Button
            android:id="@+id/button1"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="left|top"
            android:layout_marginStart="22dp"
            android:background="@drawable/documents"
            android:fontFamily="serif-monospace"
            android:textColor="#2b1fcf"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:fontFamily="serif"
            android:text="STUDY"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#0d1cbf"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:fontFamily="serif"
            android:text="Reminder"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0d1cbf"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:fontFamily="serif"
            android:text="Document"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0d1cbf"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button4"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/todolist"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#1013cb"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button3"
            android:layout_width="96dp"
            android:layout_height="93dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginStart="18dp"
            android:background="@drawable/diarywritting"
            android:fontFamily="serif"
            android:onClick="writeDiary"
            android:textColor="#360ec4"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:layout_marginStart="9dp"
            android:background="@drawable/alarmclock"
            android:fontFamily="sans-serif"
            android:textColor="#2113c3"
            android:textStyle="bold" />





    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="13dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="serif"
            android:text="To Do List"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#0d1cbf"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:fontFamily="serif"
            android:text="Diary"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0d1cbf"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:fontFamily="serif"
            android:text="Alarm"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0d1cbf"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button13"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/calendar"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#1013cb"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button14"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:layout_marginStart="22dp"
            android:background="@drawable/diarywritting"
            android:fontFamily="serif"
            android:onClick="speak"
            android:textColor="#360ec4"
            android:textStyle="bold" />

        <Button

            android:id="@+id/button15"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_marginStart="25dp"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/alarmclock4"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Alarm"
            android:textColor="#fdfcfc" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:fontFamily="serif"
            android:text="Caledar"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0d1cbf"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:fontFamily="serif"
            android:text="Diary"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0d1cbf"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:text="Document"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0d1cbf"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="6dp"
        android:layout_height="wrap_content">

    </LinearLayout>











</LinearLayout>
